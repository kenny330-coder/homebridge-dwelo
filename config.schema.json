{
  "pluginAlias": "HomebridgePluginDwelo",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "token": {
        "title": "Token",
        "type": "string",
        "required": true
      },
      "gatewayId": {
        "title": "Gateway ID",
        "type": "string",
        "required": true
      },
      "autoLock": {
        "title": "Auto Lock",
        "type": "object",
        "properties": {
          "enabled": {
            "title": "Enable Auto Lock",
            "type": "boolean",
            "default": false
          },
          "unlockedDuration": {
            "title": "Unlocked Duration (minutes)",
            "description": "Time in minutes to wait before locking an unlocked door.",
            "type": "integer",
            "default": 30
          },
          "homekitUnlockedDuration": {
            "title": "HomeKit Unlocked Duration (minutes)",
            "description": "Time in minutes to wait before locking a door that was unlocked from HomeKit.",
            "type": "integer",
            "default": 10
          }
        }
      }
    }
  }
}